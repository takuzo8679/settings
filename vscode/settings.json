{
  // 括弧の見え方
  "editor.guides.bracketPairs": true,
  "editor.fontSize": 15,
  // フォント ファミリ
  "editor.fontFamily": "Ricty Diminished",
  //
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  // preview mode 回避
  "workbench.editor.enablePreview": false,
  // サイドバーの位置
  "workbench.sideBar.location": "right",
  // コントラスト
  "workbench.colorTheme": "Default High Contrast",
  // 起動時に開くファイル
  "workbench.startupEditor": "newUntitledFile",
  // 自動保存
  "files.autoSave": "afterDelay",
  // 文字コード認識
  "files.autoGuessEncoding": true,
  // "files.encoding": "UTF-8",
  "files.encoding": "utf8",
  // LFで改行(CRLFではなく)
  "files.eol": "\n",
  // gitが見つからない場合の警告を無視する
  "git.ignoreMissingGitWarning": true,
  // ドラッグアンドドロップ時の確認
  "explorer.confirmDragAndDrop": false,

  "python.formatting.provider": "yapf",
  "breadcrumbs.enabled": true,

  "vsicons.dontShowNewVersionMessage": true,
  "git.enableSmartCommit": true,

  //ターミナル設定
  //ターミナルのフォントサイズ
  "terminal.integrated.fontSize": 14,
  // ターミナルのフォント
  "terminal.integrated.fontFamily": "monospace",
  // 自動更新無効
  // "update.enableWindowsBackgroundUpdates": false,

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },

  //////////////////////////////////////////////////////////////////////////////////
  //拡張機能
  //////////////////////////////////////////////////////////////////////////////////
  //indentカラーの設定
  // 括弧編
  "editor.bracketPairColorization.enabled": true,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#FF0000", // 赤
    "editorBracketHighlight.foreground2": "#FFBF3F", // 橙
    "editorBracketHighlight.foreground3": "#FFFF00", // 黄
    "editorBracketHighlight.foreground4": "#3FFF3F", // 緑
    "editorBracketHighlight.foreground5": "#3F7FFF", // 青
    "editorBracketHighlight.foreground6": "#FF7FFF" // 紫
  },
  "editor.guides.bracketPairs": "active",

  // インデント編
  "indentRainbow.colors": [
    "rgba(128,  64,  64, 0.5)", // 赤
    "rgba(128,  96,  32, 0.5)", // 橙
    "rgba(128, 128,  32, 0.5)", // 黄
    "rgba( 32, 128,  32, 0.5)", // 緑
    "rgba( 32,  64, 128, 0.5)", // 青
    "rgba(128,  64, 128, 0.5)" // 紫
  ],

  // ---------- Insert numbers -------------------
  //Default format string for sprintf
  "insertnum.formatstr": "%02d",
  "insertnum.start": 1,
  "insertnum.step": 1,

  "diffEditor.ignoreTrimWhitespace": false,
  "extensions.ignoreRecommendations": false,
  "editor.codeActionsOnSave": null,
  "python.showStartPage": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.lnk": "default"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "cSpell.customDictionaries": {
    "project-words": {
      "name": "project-words",
      "path": "${workspaceRoot}/project-words.txt",
      "description": "Words used in this project",
      "addWords": true
    },
    "custom": true, // Enable the `custom` dictionary
    "internal-terms": false // Disable the `internal-terms` dictionary
  },
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "json.schemas": [],
  "update.mode": "manual",
  // "bracket-pair-colorizer-2.depreciation-notice": false,
  "editor.suggest.showMethods": true,
  "editor.suggest.preview": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.snippetSuggestions": "top",
  "editor.accessibilitySupport": "off",
  "workbench.iconTheme": "vscode-icons",
  "editor.language.brackets": [],
  "terminal.integrated.cursorBlinking": true,
  "files.exclude": {
    "**/.git": false
  },
  "markdown.extension.list.indentationSize": "inherit",
  "editor.formatOnSave": true,
  "debug.onTaskErrors": "debugAnyway",
  "[python]": {
    "editor.formatOnType": true
  },
  "java.imports.gradle.wrapper.checksums": [
    {
      "sha256": "e2b82129ab64751fd40437007bd2f7f2afb3c6e41a9198e628650b22d5824a14",
      "allowed": true
    }
  ],
  "japanese-proofreading.textlint.丸かっこ（）": false,
  "japanese-proofreading.textlint.外来語カタカナ表記": false,
  "editor.fontLigatures": false,
  "japanese-proofreading.textlint.助詞の連続": true,

  // 単なる好み
  "markdown-pdf.displayHeaderFooter": false,
  // github-markdown.cssにすべて任せるので、デフォルトのスタイルを無効化
  "markdown-pdf.includeDefaultStyles": false,
  // 入手したCSSのパスを指定
  "markdown-pdf.styles": ["./style.css"],
  // prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // prettier markdownを無効化
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
    // "editor.defaultFormatter": ""
  },
  "prettier.resolveGlobalModules": true,

  // ---------- Vim -------------------
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],

  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  "window.zoomLevel": 1,
  "emmet.variables": {
    "lang": "ja"
  },
  "html.format.indentInnerHtml": true,
  "editor.tabSize": 2,
  "git.openRepositoryInParentFolders": "never"
}
